{
  "variables": {
    "HOME": "{{env `HOME`}}",
    "USER": "{{env `USER`}}",
    "remote_datastore": "{{env `ESXI_DS`}}",
    "remote_username": "{{env `ESXI_USER`}}",
    "remote_password": "{{env `ESXI_PASS`}}",
    "remote_host": "{{env `ESXI_IP`}}",
    "remote_hostname": "{{env `ESXI_HOST`}}",
    "output_directory": "{{env `GO_PIPELINE_COUNTER`}}",
    "vm_name": "centos7"
  },
  "builders": [{
    "type": "vmware-iso",
    "boot_command": [
        "<tab> text ks=http://192.168.0.27:9080/kickstart.cfg<enter><wait>"
    ],
    "boot_wait": "5s",
    "guest_os_type": "centos-64",
    "disk_size": 61440,
    "iso_url": "http://repo.bigstepcloud.com/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
    "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
    "iso_checksum_type": "sha256",
    "ssh_username": "packer",
    "ssh_password": "packer",
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo '{{user `USER`}}' | sudo -S shutdown -P now",
    "name": "{{user `vm_name`}}",
    "remote_type": "esx5",
    "remote_host": "{{user `remote_host`}}",
    "remote_username": "{{user `remote_username`}}",
    "remote_password": "{{user `remote_password`}}",
    "remote_datastore": "{{user `remote_datastore`}}",
    "output_directory": "{{user `output_directory`}}",
    "vmx_data": {
      "format": "ova",
      "ethernet0.networkName": "VM Network"
    }
  }],
  "provisioners": [{
    "type": "chef-solo",
    "cookbook_paths": ["cookbooks"],
    "run_list": ["recipe[base_hardening::default]"]
  }, {
    "type": "shell-local",
    "command": "inspec exec cookbooks/base_hardening/test/integration/harden/base_hardening_spec.rb -t ssh://packer:packer@$(./vm_command -u {{user `remote_username`}} -h {{user `remote_host`}} -a getip -b {{user `output_directory`}} -i ~/.ssh/id_rsa -d {{user `remote_datastore`}}) --sudo"
  }]
}
